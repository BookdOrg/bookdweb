            <li><a href="#/about">About</a></li>
            <li><a href="#/contactUs">Contact</a></li>
            <li class="hidden-sm hidden-md hidden-lg"><a href="#/user/{{currentUser()._id}}/profile">My Profile</a></li>
            <li class="hidden-sm hidden-md hidden-lg"><a href="#/user/{{currentUser()._id}}/account">Account</a></li>
            <li class="disabled hidden-sm hidden-md hidden-lg"><a  href="#">Preferences</a></li>
