            <hr>
            <li class="hidden-sm hidden-md hidden-lg"><a ng-click="logOut()">Sign Out</a></li>
          </ul>
          <div class="navbar-inner">
            <ul class="nav navbar-nav hidden-xs">
              <div ng-if="isLoggedIn()" class="input-group" style="width:300px; margin-top:8px;">
                <div class="input-group">
                  <input class="form-control" g-places-autocomplete options="autocompleteOptions" ng-model="place" placeholder="Location">
                  <span class="input-group-btn">
                    <button class="btn btn-success" type="button">
                      <i style="height:20px; line-height:18px;"class="fa fa-search fa-fw"></i>
                    </button>
                  </span>
                </div>
              </div>
            </ul>
            <ul class="nav navbar-nav navbar-right hidden-xs">
              <li class="dropdown" ng-show="isLoggedIn()" style="margin-right:10px;">
                <a href="" class="dropdown-toggle" data-toggle="dropdown"><i class="fa fa-user"></i> Welcome, {{currentUser().username}} <span class="caret"></span></a>
                <ul class="dropdown-menu">
                  <li><a href="#/user/{{currentUser()._id}}/profile">My Profile</a></li>
                  <hr>
                  <li><a href="#/user/{{currentUser()._id}}/account"><i class="fa fa-cog"></i> Account</a></li>
                  <li class="disabled"><a  href="#"><i class="fa fa-reorder"></i> Preferences</a></li>
                  <li class="disabled"><a href="#"><i class="fa fa-inbox"></i> Messages <span class="badge">1</span></a></li>
                  <hr>
                  <li><a ng-click="logOut()"><i class="fa fa-sign-out"></i> Sign Out</a></li>
                </ul>
              </li>
              <li ng-hide="isLoggedIn()"><a href="/#/login"><i class="fa fa-sign-in"></i></span> Log In</a></li>
              <li ng-hide="isLoggedIn()"><a href="/#/register"><i class="fa fa-user"></i> Register</a></li>
            </ul>
          </div>
