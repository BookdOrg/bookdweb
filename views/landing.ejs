<script>
    $(document).ready(function () {
        $("#submitBtn").click(function () {
            if (!$("input[name='userType']:checked").val()) {
                $("#radio-toolbar").popover('show');
                setTimeout(function () {
                    $("#radio-toolbar").popover('hide')
                }, 5000);
            }
            else {
                $("#radio-toolbar").popover('hide');
            }
        })
    })
</script>
