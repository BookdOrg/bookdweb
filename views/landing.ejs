    <div class="row" style="margin-top:20px;">
        <div class="col-xs-12 col-sm-8 col-md-6">
            <form action="/beta/sign-up" method="POST">
                <div class="inner-addon right-addon">
                    <i class="fa fa-angle-right"></i>
                    <input type="email" id="email" name="email"
                           placeholder="Enter your email address for updates on our release."
                           aria-describedby="fa fa-angle-right" required/>

                </div>
                <div class="radio-toolbar">
                    <p class="customerSelection">I am a(n)

                        <input type="radio" id="barber" name="userType" value="barber" required>
                        <label for="barber">Barber</label>


                        <input type="radio" id="shopOwner" name="userType" value="shopOwner">
                        <label for="shopOwner">Shop Owner</label>


                        <input type="radio" id="client" name="userType" value="client">
                        <label for="client">Client</label>


                        <input type="radio" id="other" name="userType" value="other">
                        <label for="other">Other</label>
                    </p>
                </div>
                <div class="row" style="margin-top:20px;">
                    <div class="col-xs-9 col-sm-8 col-md-6">
                        <button id="submitBtn" class="btn btn-lg" type="submit">Sign up</button>
                    </div>
                </div>
            </form>
        </div>
